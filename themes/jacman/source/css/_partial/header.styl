body
  >header
    width 100%
    color color-white
    background-color color-white
    padding 1em 0 0.8em 
    border-bottom 1px solid #ff7554
    border-bottom 1px solid rgba(0,0,0,.04)
    box-shadow 0 1px 4px rgba(0,0,0,.03)
    border-radius 3px
    @media tablet
      padding 1em 0 1.5em
    >div
      width 95%
      margin 0 auto
      position relative
      overflow hidden
      @media tablet
        width 93%
    a
      display block
      color #ff7554

#imglogo
  float left
  margin-top 0.5em
  width 4em
  height 4em
  img
    width 4em
    height 4em

#textlogo
  float left
  width 60%
  margin-left 0.5em
  color #ff7554
  @media mini 
    width 20%
  h1.site-name
    width 50%
    margin-top 0.2em
    margin-bottom -0.3em
    font-family "ff-tisa-web-pro-1", "ff-tisa-web-pro-2", "Lucida Grande", "Hiragino Sans GB", "Hiragino Sans GB W3", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif
    font-size font-size+90
    line-height line-height-10
    font-weight normal
    a:hover
      color #FF3100
    @media mini
      font-size font-size+90
  h2.blog-motto
    font-size font-size
    font-weight normal
    margin-bottom 0.1em
    line-height line-height+0.4
    @media mini
      font-size font-size

.navbar
  position absolute
  width 2em
  right 0em
  top 1em
  padding 0.5em
  @media mini
    display none

.navbutton::before
  font-family font-icon-family
  font-smoothing()
  content "\f0c9"

.navmobile::before
  padding-left 1em

header nav
  float left    
  width 100%
  @media mini
    float right
    width auto
    margin-top 1em
    max-height none
  font-size font-size+12.5
  padding-top 0.5em
  max-height 0.01em
  transition max-height 1s ease-out
  ul
    @media mini
      float right
  ul li
    @media mini
      float left
  ul li a
    padding 0.2em 0 0.2em 1em
    @media mini
      padding 0.2em 1em
    @media tablet
      padding 0.2em 1.5em
    &:hover
      color #FF3100
      font-weight 600

.shownav
  max-height 40em

.search
  padding 0.1em 0 0 1em
  color: #FF7554
  input
    text-align: center
    lhhere = 30px
    -webkit-appearance textfield
    font-size 0.87em
    line-height lhhere
    border 1px solid #FF7554
    color #FF7554
    background transparent
    width 8rem
    padding-left 0.6em
    border-radius 30px
    @media tablet
      width 8em
      transition .5s width
      &:focus
        width 15em
    &::-webkit-input-placeholder { /* WebKit, Blink, Edge */
      color #FF7554
      line-height lhhere - 2px
    }
    &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
      color #FF7554
      line-height lhhere - 4px
      opacity 1
    }
    &::-moz-placeholder { /* Mozilla Firefox 19+ */
      color #FF7554
      line-height lhhere - 4px
      opacity 1
    }
    &:-ms-input-placeholder { /* Internet Explorer 10-11 */
      color #FF7554
      line-height lhhere - 4px
    }
  label
    display none

#swiftweekly
  z-index 1000
  position fixed
  bottom 0
  height 40px
  width 100%
  background-color #E3512B
  text-align center
  .disabled {
    cursor: not-allowed;
    opacity: .65;
  }
  #closeme
    float: left
    cursor: pointer;
    box-sizing: border-box;
    height: 39px;
    width: 42px;
    margin-top: -30px;
  #sw_slogan
    display block
    float center 
    line-height 40px
    margin-left 10%
    margin-right 10%
    letter-spacing 0.08em
    font-size 1em
    color #FBFBFB
  #content
    display block
    float left
    line-height 1.6rem
    height: 40px;
    font-size: 1rem;
    font-weight: 700;
    text-align: center;
    #sw_email
      float left
      box-shadow inset 0 0 2px #B63F17;
      border none
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 4px 0px 0px 4px;
      box-sizing: border-box;
      padding: 12px 16px
      color #000
      font-size 12px
      height 100%
      pcolor=#7D706D
      lh=0.7rem
      &::-webkit-input-placeholder::before{content: "";}
      &::-moz-placeholder:before{content: "\f002";}
      &:-ms-input-placeholder::before{content: "\f002";}
      &::-webkit-input-placeholder { /* WebKit, Blink, Edge */
          line-height lh
          color pcolor
      }
      &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
        line-height lh
        color pcolor
        opacity 1
      }
      &::-moz-placeholder { /* Mozilla Firefox 19+ */
        line-height lh
        color pcolor
        opacity 1
      }
      &:-ms-input-placeholder { /* Internet Explorer 10-11 */
        line-height lh
        color pcolor
      }
      width 66%
    .sw_sub
      float: left
      display: block
      line-height: 40px
      height: 100%
      box-shadow: none;
      background-color: #F36D40;
      color: #FBFCFB;
      border-radius: 4px;
      border-bottom-left-radius: 0px;
      border-top-left-radius: 0px;
      
      text-decoration: none;
      display: inline-block;
      cursor: pointer;
      box-sizing: border-box;
      width 34%
    .sw_sub:hover
      background-color: #B63F17;
  @media phone
    padding 0.4em
    height 100px
    #sw_slogan
      margin-bottom 0.3em
      width 90%
      margin-left 0px
    #content
      width 80%
      margin-left 10%
    #sw_email
      font-size 12px
  @media mini
    height 40px
    padding 0.4em
    #sw_slogan
      font-size 1em
      width 100%
    #content
      width 40%
      margin-left 0px
  @media tablet
    padding 0.5em
    #sw_slogan
      width 100%
    #content
      width 40%
    #sw_email
      lh=1rem
      &::-webkit-input-placeholder { /* WebKit, Blink, Edge */
          line-height lh
          color pcolor
      }
      &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
        line-height lh
        color pcolor
        opacity 1
      }
      &::-moz-placeholder { /* Mozilla Firefox 19+ */
        line-height lh
        color pcolor
        opacity 1
      }
      &:-ms-input-placeholder { /* Internet Explorer 10-11 */
        line-height lh
        color pcolor
      }
