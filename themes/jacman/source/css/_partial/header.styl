body
  >header
    width 100%
    box-shadow 2px 4px 5px hsla(0,1%,1%,.2)
    if(banner_img)
      background url("../"+banner-img) center color-theme
    else
      background color-theme
    color color-white
    padding 1em 0 0.8em 
    @media tablet
      padding 1.8em 0 1.5em
    >div
      width 95%
      margin 0 auto
      position relative
      overflow hidden
      @media tablet
        width 93%
    a
      display block
      color color-white

#imglogo
  float left
  width 4em
  height 4em
  @media mini
    width @width+1
  @media tablet
    width @width+1.5
  img
    width 4em
    @media mini
      width @width+1
    @media tablet
      width @width+1.5

#textlogo
  float left
  width 30%
  margin-left 0.5em
  h1.site-name
    width 50%
    margin-top 0.2em
    margin-bottom -0.3em
    ShowCustomFont = false
    if ShowCustomFont
      font-family font-custom-family
      font-size font-size+100
      line-height line-height
      font-smoothing()
      @media mini
        font-size font-size+140
      @media tablet
        font-size font-size+180
    else
      font-family font-default
      font-size font-size+60
      line-height line-height-10
      font-weight normal
      @media mini
        font-size font-size+90
      @media tablet
        font-size font-size+120
  h2.blog-motto
    font-size 0.7em
    font-weight normal
    margin-bottom 0.1em
    line-height line-height+0.4
    @media mini
      font-size font-size
    @media tablet
      font-size font-size+10

.navbar
  position absolute
  width 2em
  right 0em
  top 1em
  padding 0.5em
  @media mini
    display none

.navbutton::before
  font-family font-icon-family
  font-smoothing()
  content "\f0c9"

.navmobile::before
  padding-left 1em

header nav
  float left    
  width 100%
  @media mini
    float right
    width auto
    margin-top 1em
    max-height none
  font-size font-size+12.5
  padding-top 0.5em
  max-height 0.01em
  transition max-height 1s ease-out
  ul
    @media mini
      float right
  ul li
    @media mini
      float left
  ul li a
    padding 0.2em 0 0.2em 1em
    @media mini
      padding 0.2em 1.5em
    &:hover
      background saturate(darken(color-theme, 25%), 10%)
      color color-font-nav

.shownav
  max-height 40em

.search
  padding 0.1em 0 0 1em
  input
    -webkit-appearance textfield
    font-size 0.87em
    line-height line-height+0.2
    border 1px solid color-white
    color color-white
    background transparent
    width 80%
    padding-left 0.5em
    @media tablet
      width 8em
      transition .5s width
      &:focus
        width 15em
  label
    display none

#swiftweekly
  z-index 1000
  position fixed
  bottom 0
  height 40px
  width 100%
  background-color #E3512B
  text-align center
  .disabled {
    cursor: not-allowed;
    opacity: .65;
  }
  #sw_slogan
    display block
    float left
    line-height 40px
    margin-left 10%
    letter-spacing 0.08em
    font-size 1em
    color #FBFBFB
  #content
    display block
    float left
    line-height 1.6rem
    height: 40px;
    font-size: 1rem;
    font-weight: 700;
    text-align: center;
    #sw_email
      float left
      box-shadow inset 0 0 2px #B63F17;
      border none
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 4px 0px 0px 4px;
      box-sizing: border-box;
      padding: 12px 16px
      color #000
      font-size 12px
      height 100%
      pcolor=#7D706D
      lh=0.8rem
      &::-webkit-input-placeholder { /* WebKit, Blink, Edge */
          line-height lh
          color pcolor
      }
      &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
        line-height lh
        color pcolor
        opacity 1
      }
      &::-moz-placeholder { /* Mozilla Firefox 19+ */
        line-height lh
        color pcolor
        opacity 1
      }
      &:-ms-input-placeholder { /* Internet Explorer 10-11 */
        line-height lh
        color pcolor
      }
      width 66%
    .sw_sub
      float: left
      display: block
      line-height: 40px
      height: 100%
      box-shadow: none;
      background-color: #F36D40;
      color: #FBFCFB;
      border-radius: 4px;
      border-bottom-left-radius: 0px;
      border-top-left-radius: 0px;
      
      text-decoration: none;
      display: inline-block;
      cursor: pointer;
      box-sizing: border-box;
      width 34%
    .sw_sub:hover
      background-color: #B63F17;
  @media phone
    padding 0.4em
    height 100px
    #sw_slogan
      margin-bottom 0.3em
      width 100%
      margin-left 0px
    #content
      width 80%
      margin-left 10%
    #sw_email
      font-size 12px
  @media mini
    height 40px
    padding 0.4em
    #sw_slogan
      font-size 1em
      width 40%
    #content
      width 40%
  @media tablet
    padding 0.5em
    #sw_slogan
      width 40%
    #content
      width 40%
    #sw_email
      lh=1rem
      &::-webkit-input-placeholder { /* WebKit, Blink, Edge */
          line-height lh
          color pcolor
      }
      &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
        line-height lh
        color pcolor
        opacity 1
      }
      &::-moz-placeholder { /* Mozilla Firefox 19+ */
        line-height lh
        color pcolor
        opacity 1
      }
      &:-ms-input-placeholder { /* Internet Explorer 10-11 */
        line-height lh
        color pcolor
      }
